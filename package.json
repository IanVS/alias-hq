{
  "name": "alias-hq",
  "version": "5.1.5",
  "description": "The end-to-end solution for configuring, refactoring, maintaining and using path aliases",
  "main": "src/index.js",
  "bin": "bin/alias-hq",
  "files": [
    "src/*",
    "cli/*",
    "bin/*"
  ],
  "scripts": {
    "cli": "node cli",
    "setup": "node cli -- setup",
    "test": "jest --verbose",
    "test:plugins": "jest --watch -f plugins.spec.js -t 'available plugins:'",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davestewart/alias-hq.git"
  },
  "keywords": [
    "paths",
    "aliases",
    "typescript",
    "webstorm",
    "vscode",
    "rollup",
    "webpack",
    "jest"
  ],
  "author": "Dave Stewart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davestewart/alias-hq/issues"
  },
  "homepage": "https://github.com/davestewart/alias-hq#readme",
  "devDependencies": {
    "ghooks": "^2.0.4",
    "jest": "^26.4.1"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "glob": "^7.1.6",
    "inquirer": "^7.3.3",
    "jscodeshift": "^0.10.0",
    "module-alias": "^2.2.2",
    "node-fetch": "^2.6.0",
    "open": "^7.0.0",
    "vue-jscodeshift-adapter": "^2.1.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    }
  },
  "alias-hq": {
    "root": "./demo",
    "prefix": "@",
    "folders": [
      "packages",
      "src"
    ],
    "modules": [
      "@packages"
    ]
  }
}
